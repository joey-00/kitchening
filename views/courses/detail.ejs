<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

  <body class="home">
    <!-- encabezado -->
    <%- include('../partials/header') %>

      <!-- principal -->
      <main class="home__main">
        
        <!-- productos -->
        <section class="home__main__section--productos">
            
              <article class="home__main__section__article animate__animated">
              <div class="home__main__section__article--imagen">
                <img class="home__main__section__article--imagen-product" src="/images/cursos/<%= course.image %> " alt="">
                <img class="home__main__section__article--imagen-sticker" src="/images/<%= course.level %> " alt="">
                <a class="home__main__section__article--imagen-zoom" href="">ampliar foto</a>
              </div>
              <div class="home__main__section__article--contenido">
                <h4><%=course.title %> </h4>
                <p><%= course.description %> </p>
                <a href="/courses/detail/<%= course.id %> ">ver más</a>
              </div>
            </article>
        
       
        </section>
           <!-- botón de whatsapp -->

        <%- include('../partials/whatsApp') %>

      </main>
      <!-- pie de pagina -->

      <%- include('../partials/footer') %>


        <%- include('../partials/scripts') %>

          <script src="/javascripts/home.js"></script>

  </body>

</html>